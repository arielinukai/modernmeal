<script type="text/javascript">

	jQuery(function() {

        jQuery('textarea.tinymce').tinymce({
            script_url : '/javascripts/tiny_mce/tiny_mce_src.js',
            mode : "textareas",
            theme : "advanced",
            plugins : "paste",
            paste_preprocess : function(pl, o) {

                if (o.content.length == 2) {
                    jQuery('#paste-text-dialog').dialog('open');
                }
            },

            theme_advanced_buttons1 : "",
            theme_advanced_buttons2 : "",
            theme_advanced_buttons3 : "",
            theme_advanced_toolbar_location : "top",
            theme_advanced_toolbar_align : "left",
            theme_advanced_statusbar_location : ""
        });

        
        jQuery('#paste-text-dialog').dialog({ autoOpen: false,
            modal : true,
            width : 900,
            buttons: [
                {
                    text: "Ok",
                    click: function() {
                        jQuery(this).dialog("close");
                        pasteTextDialogOk();
                    }
                },
                {
                    text: "Cancel",
                    click: function() {
                        jQuery(this).dialog("close");
                        pasteTextDialogCancel();
                    }
                }
            ]
        });
    });

	
    function pasteTextDialogOk() {
        var pastedText = jQuery('#paste-text').val();

        tinyMCE.activeEditor.setContent('<pre>' + pastedText + '</pre>', {format : 'html'});
    }

    function pasteTextDialogCancel() {
        jQuery('#recipe-text').val('');
    }
    
</script>